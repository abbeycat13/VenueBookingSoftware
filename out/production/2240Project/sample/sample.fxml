<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" prefHeight="600.0" prefWidth="500.0" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.VenueBookingSystem">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Pane prefHeight="560.0" prefWidth="560.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
         <children>
            <Pane fx:id="loginPane" layoutX="40.0" layoutY="108.0" prefHeight="300.0" prefWidth="400.0">
               <children>
                  <TextField fx:id="clientIDField" layoutX="145.0" layoutY="123.0" />
                  <PasswordField fx:id="passwordField" layoutX="145.0" layoutY="163.0" />
                  <Label layoutX="67.0" layoutY="168.0" text="Password:" />
                  <Label layoutX="67.0" layoutY="128.0" text="Client ID:" />
                  <Label layoutX="145.0" layoutY="89.0" text="Existing User:" />
                  <Button fx:id="btLogin" layoutX="145.0" layoutY="206.0" mnemonicParsing="false" onAction="#handleLogin" text="Login" />
                  <Button fx:id="btNewUser" layoutX="229.0" layoutY="34.0" mnemonicParsing="false" onAction="#handleNewUser" text="New User" />
                  <Label fx:id="msgText" layoutX="67.0" layoutY="247.0" prefHeight="17.0" prefWidth="305.0" />
               </children>
            </Pane>
            <Pane fx:id="registerPane" layoutX="41.0" layoutY="80.0" prefHeight="400.0" prefWidth="400.0" visible="false">
               <children>
                  <VBox layoutX="186.0" layoutY="10.0" prefHeight="220.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <TextField fx:id="newIDField" />
                        <PasswordField fx:id="newPassField" />
                        <TextField fx:id="newFNField" />
                        <TextField fx:id="newLNField" />
                        <TextField fx:id="newPhoneField" />
                        <TextField fx:id="newEmailField" />
                     </children>
                  </VBox>
                  <VBox alignment="TOP_RIGHT" layoutX="14.0" layoutY="14.0" prefHeight="200.0" prefWidth="160.0" spacing="20.0">
                     <children>
                        <Label text="ID (must be unique):" />
                        <Label text="Password:" />
                        <Label text="First Name:" />
                        <Label text="Last Name:" />
                        <Label text="Phone Number:" />
                        <Label text="Email:" />
                     </children>
                  </VBox>
                  <Button fx:id="btRegister" layoutX="186.0" layoutY="249.0" mnemonicParsing="false" onAction="#handleReg" text="Register New User" />
                  <Label fx:id="msgText" layoutX="13.0" layoutY="298.0" prefHeight="17.0" prefWidth="374.0" />
               </children>
            </Pane>
            <Pane fx:id="mainPane" layoutY="2.0" prefHeight="560.0" prefWidth="480.0" visible="false">
               <children>
                  <HBox fx:id="menuBar" alignment="CENTER" layoutX="14.0" layoutY="42.0" prefHeight="31.0" prefWidth="453.0" spacing="10.0">
                     <children>
                        <Button fx:id="btBook" mnemonicParsing="false" onAction="#handleBookEvent" text="Book Event" />
                        <Button fx:id="btCancel" mnemonicParsing="false" onAction="#handleCancelBooking" text="Cancel Booking" />
                        <Button fx:id="btView" mnemonicParsing="false" onAction="#handleViewBookings" text="View Bookings" />
                        <Button fx:id="btCal" mnemonicParsing="false" onAction="#handleEventCal" text="Event Calendar" />
                     </children>
                  </HBox>
                  <Label fx:id="clientIDLabel" layoutX="14.0" layoutY="14.0" text="Client: " />
                  <ScrollPane fx:id="viewBookingsPane" layoutX="14.0" layoutY="80.0" prefHeight="435.0" prefWidth="455.0" visible="false">
                     <content>
                        <VBox fx:id="bookingVBox" alignment="TOP_CENTER" prefHeight="460.0" prefWidth="440.0" spacing="20.0" visible="false" />
                     </content>
                  </ScrollPane>
                  <HBox alignment="BOTTOM_RIGHT" layoutX="14.0" layoutY="515.0" prefHeight="38.0" prefWidth="455.0" spacing="10.0">
                     <children>
                        <Button fx:id="btUpdateInfo" mnemonicParsing="false" onAction="#handleUpdateInfo" text="Update Contact Info" />
                        <Button fx:id="btLogOut" mnemonicParsing="false" onAction="#handleLogOut" text="Log Out" />
                     </children>
                  </HBox>
                  <ScrollPane fx:id="bookEventPane" layoutX="13.0" layoutY="80.0" prefHeight="435.0" prefWidth="455.0" visible="false">
                     <content>
                        <VBox prefHeight="430.0" prefWidth="450.0" spacing="10.0">
                           <children>
                              <Label text="Select a venue:" />
                              <VBox fx:id="venuesVBox" prefHeight="100.0" prefWidth="100.0" />
                              <ChoiceBox fx:id="venueChoice" prefWidth="150.0" />
                              <Label text="Select date:" />
                              <DatePicker fx:id="dateChoice" />
                           </children>
                        </VBox>
                     </content>
                  </ScrollPane>
               </children>
            </Pane>
         </children>
      </Pane>
   </children>
</GridPane>
